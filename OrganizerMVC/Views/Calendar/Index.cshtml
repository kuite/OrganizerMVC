<!DOCTYPE html>
<html>
<head>
    <title>Calendar</title>

    <meta content="text/html; charset=UTF-8" />
    <link href="~/Content/fullcalendar.css" rel="stylesheet"/>
    <link href="~/Content/fullcalendar.print.css" rel="stylesheet" media="print"/>
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap-timepicker.min.css"/>

    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/fullcalendar.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-timepicker.min.js"></script>

    <script>
        $(document).ready(function() {
            $("#calendar").fullCalendar({
                height: 800,
                customButtons: {
                    newActivityButton: {
                        text: "New activity",
                        click: function() {
                            var selectedDate = $("#calendar").fullCalendar("getDate").format("YYYY-MM-DD");
                            $("#myModal").modal("show");

                            $("#datePicker").val(selectedDate);
                        }
                    }
                },
                header: {
                    left: "prev,next today, newActivityButton",
                    center: "title",
                    right: "month,agendaWeek,agendaDay"
                },
                firstDay: 1,
                defaultDate: new Date(),
                editable: true,
                eventLimit: true
            });
        });
    </script>

    <style>
        body {
            margin: 40px 10px;
            padding: 0;
            font-family: "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;
            font-size: 14px;
        }

        #calendar {
            max-width: 900px;
            height: 100%;
            margin: 0 auto;
        }
    </style>
</head>
<body>


